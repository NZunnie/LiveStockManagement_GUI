<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LiveStockManagementGUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LiveStockManagementGUI"
    xmlns:Pages ="clr-namespace:LiveStockManagementGUI.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Data Listing" Shell.NavBarIsVisible="False">
            <ShellContent ContentTemplate="{DataTemplate Pages:DataPage}"/>
        </Tab>
        <Tab Title="Report" Shell.NavBarIsVisible="False">
            <ShellContent ContentTemplate="{DataTemplate Pages:ReportPage}"/>
        </Tab>
        <Tab Title="Search" Shell.NavBarIsVisible="False">
            <ShellContent ContentTemplate="{DataTemplate Pages:SearchPage}"/>
        </Tab>
        <Tab Title="Management" Shell.NavBarIsVisible="False">
            <ShellContent ContentTemplate="{DataTemplate Pages:ManagementPage}"/>
        </Tab>
    </TabBar>

</Shell>
