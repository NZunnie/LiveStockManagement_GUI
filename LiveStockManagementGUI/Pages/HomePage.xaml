<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiveStockManagementGUI.Pages.HomePage"
             Title="Home">
    <Border Margin ="40,40" 
            BackgroundColor= "#add7b1"
            StrokeShape="Rectangle 10">

        <StackLayout>
            <!-- Header Grid for column titles -->
            <Grid Grid.Row="0" Column="0" ColumnSpan="2" BackgroundColor="#add7b1">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Image Source="logo_circle.png" HeightRequest="50" WidthRequest="50"/>
                    <Label 
                     Text="Livestock Management System" 
                        FontSize="22" FontAttributes="Bold" TextColor="#1A4D2E" BackgroundColor ="Transparent"/>
                </HorizontalStackLayout>
                </Grid>
            <Grid>
                <Image Source="report_logo.png" HeightRequest="200" WidthRequest="200"/>
            </Grid>
            <Grid>
                <HorizontalStackLayout HorizontalOptions="Center">
                <Label
                   Text ="Welcome to Livestock Management System App"
                    FontSize="15" TextColor="#1A4D2E" BackgroundColor ="Transparent"/>
                </HorizontalStackLayout>
            </Grid>
        </StackLayout>
    </Border>
</ContentPage>